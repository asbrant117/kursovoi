# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                      controllers.GameboardController.index
GET         /edit2                 controllers.GameboardController.edit2
GET         /edit                  controllers.GameboardController.edit
GET         /all                   controllers.GameboardController.all

GET         /api/country           controllers.JsonController.country(id: Int)
GET         /api/boardgame       controllers.JsonController.boardgame(id: Int)
POST        /api/country           controllers.JsonController.updateCountry()

GET         /country               controllers.GameboardController.Gameboard(id: Int)
#GET         /country/update        controllers.GameboardController.GameboardUpdate(id: Int, population: Int)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)


